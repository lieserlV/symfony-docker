{% extends 'base.html.twig' %}

{% block title %}Liste des articles {% endblock %}

{% block body %}

<div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Article</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active">Article</li>
                        </ol>
                        {% for message in app.flashes('success') %}
                                            <div class="alert alert-success">
                                                {{ message }}
                                            </div>
                                        {% endfor %}
                        {% for article in liste_article %}

                        <div class="card" style="width: 18rem;">
                                        <div class="card-body">
                                        <h5 class="card-title">{{ article.titre }}</h5>
                                        <p class="card-text">{{ article.texte }}</p>
                                        <p class="card-text">Créé le {{ article.date|date('d/m/Y') }}</p>
                                        <a href="{{ path('app_article_modifier', { 'id' : article.id })}}" class="btn btn-secondary"> Modifier</a>
                                        <a href="{{ path('app_article_supprimer', { 'id' : article.id })}}" class="btn btn-danger"> Supprimer</a>
                                      </div>
                                    </div>

                        {% endfor %}
                        
            </main>    
            </div>
        </div>
{% endblock %}
